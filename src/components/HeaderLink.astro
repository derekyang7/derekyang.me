---
const { type, href, class: className, ...props } = Astro.props;
---

<p>
  <a href={href} class={className} {...props}>
    <img src={`${type}.png`} />
    <slot />
  </a>
</p>

<style>
  img {
    display: inline-block;
    height: 1.3em;
    margin-right: 0.3em;
  }
  a {
    display: inline-block;
    text-decoration: none;
  }
</style>
